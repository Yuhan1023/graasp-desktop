{
  "name": "graasp-desktop",
  "version": "0.1.5",
  "description": "Desktop application for the Graasp ecosystem.",
  "private": true,
  "author": "React EPFL",
  "contributors": [
    "Juan Carlos Farah",
    "Hassan Abdul Ghaffar"
  ],
  "license": "MIT",
  "homepage": "./",
  "main": "public/electron.js",
  "keywords": [
    "Graasp Desktop",
    "React",
    "Electron"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/graasp/graasp-desktop"
  },
  "scripts": {
    "dev": "yarn react-scripts start",
    "build": "react-scripts build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "predist": "yarn build",
    "lint": "eslint .",
    "prettier": "prettier --check '{src,public}/**/*.js'",
    "test": "react-scripts test",
    "dist": "env-cmd ./.env electron-builder",
    "prerelease": "yarn build",
    "release": "git add CHANGELOG.md && standard-version -a && env-cmd ./.env build",
    "hooks:uninstall": "node node_modules/husky/husky.js uninstall",
    "hooks:install": "node node_modules/husky/husky.js install",
    "postrelease": "git push --follow-tags origin master",
    "test:once": "cross-env CI=true env-cmd ./.env.test react-scripts test --env=jsdom",
    "test:coverage": "cross-env CI=true env-cmd ./.env.test react-scripts test --env=jsdom --coverage",
    "test:ci": "run-s test:coverage report",
    "report": "cat ./coverage/lcov.info | env-cmd ./.env.test codacy-coverage"
  },
  "dependencies": {
    "@material-ui/core": "3.9.3",
    "@material-ui/icons": "3.0.2",
    "archiver": "3.0.0",
    "classnames": "2.2.6",
    "connected-react-router": "6.4.0",
    "electron-devtools-installer": "2.2.4",
    "electron-dl": "1.14.0",
    "electron-is-dev": "1.1.0",
    "electron-log": "3.0.5",
    "electron-publisher-s3": "20.17.2",
    "electron-updater": "4.0.6",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.12.1",
    "extract-zip": "1.6.7",
    "fs-extra": "7.0.1",
    "history": "4.9.0",
    "immutable": "4.0.0-rc.12",
    "is-online": "8.2.0",
    "ncp": "2.0.0",
    "prop-types": "15.7.2",
    "react": "16.8.6",
    "react-dev-utils": "9.0.0",
    "react-dom": "16.8.6",
    "react-loading": "2.0.3",
    "react-redux": "7.0.3",
    "react-redux-toastr": "7.4.9",
    "react-router": "5.0.0",
    "react-router-dom": "5.0.0",
    "redux": "4.0.1",
    "redux-devtools-extension": "2.13.8",
    "redux-promise": "0.6.0",
    "redux-thunk": "2.3.0",
    "wait-on": "3.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "codacy-coverage": "3.4.0",
    "concurrently": "4.1.0",
    "cross-env": "5.2.0",
    "electron": "5.0.0",
    "electron-builder": "20.39.0",
    "env-cmd": "8.0.2",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.2.0",
    "husky": "2.1.0",
    "prettier": "1.17.0",
    "pretty-quick": "1.10.0",
    "react-scripts": "3.0.0",
    "redux-mock-store": "1.5.3",
    "standard-version": "5.0.2",
    "version-bump-prompt": "5.0.1"
  },
  "build": {
    "appId": "com.graasp",
    "compression": "normal",
    "productName": "Graasp",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "type": "distribution",
      "target": [
        "pkg",
        "dmg",
        "mas",
        "zip"
      ],
      "category": "public.app-category.education",
      "publish": [
        "github"
      ]
    },
    "mas": {
      "entitlements": "assets/entitlements.mas.plist",
      "entitlementsInherit": "assets/entitlements.mas.inherit.plist",
      "provisioningProfile": "assets/embedded.provisionprofile"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "snap",
        "AppImage"
      ],
      "description": "Desktop application for the Graasp ecosystem.",
      "category": "Network;Feed",
      "publish": [
        "github"
      ]
    }
  },
  "release": {
    "analyzeCommits": "conventional"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
